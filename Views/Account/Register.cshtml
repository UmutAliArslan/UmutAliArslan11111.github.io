@model Emlak.Models.Register
@{
    ViewBag.Title = "Register";
}

<div class="container">
    
    <div class="row">
        <div class="col-md-3">
            <br />
            <!-- Filtreleme Kısmı -->
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">En Az</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="En Az(Fiyat)">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">En Çok</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="En Çok(Fiyat)">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Şehir</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Şehir">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Semt</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Semt">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Mahalle</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Mahalle">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Durum</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Durum">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">Tip</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" placeholder="Tip">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label"></label>
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-search"></i> FİTRELEME</button>
                    </div>
                </div>
            </form>
        </div>

        <!-- İlan Listesi -->
        <br />
       <div class="col-md-9">
           <div class="thumbnail" style="width:845px;">
               


               <nav aria-label="breadcrumb">
                   <ol class="breadcrumb">
                       <li class="breadcrumb-item"><a href="/Home/Index">Ana Sayfa</a></li>
                       <li class="breadcrumb-item active" aria-current="page">Kayıt Ol</li>
                   </ol>
               </nav>
               @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
               {
                   <div class="form-group">
                       <label for="inputEmail3" class="col-sm-2 control-label">Adı</label>
                       <div class="col-sm-4">
                           @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                       </div>
                   </div>
                   <div class="form-group">
                       <label for="inputEmail3" class="col-sm-2 control-label">Soyadı</label>
                       <div class="col-sm-4">
                           @Html.EditorFor(m => m.Surname, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                       </div>
                   </div>
                   <div class="form-group">
                       <label for="inputEmail3" class="col-sm-2 control-label">Kullanıcı Adı</label>
                       <div class="col-sm-4">
                           @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                       </div>
                   </div>
                   <div class="form-group">
                       <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                       <div class="col-sm-4">
                           @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                       </div>
                   </div>
                   <div class="form-group">
                       <label for="inputEmail3" class="col-sm-2 control-label">Şifre</label>
                       <div class="col-sm-4">
                           @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                       </div>
                   </div>
                   <div class="form-group">
                       <label for="inputEmail3" class="col-sm-2 control-label">Şifre Tekrar</label>
                       <div class="col-sm-4">
                           @Html.EditorFor(m => m.RePassword, new { htmlAttributes = new { @class = "form-control" } })
                           @Html.ValidationMessageFor(m => m.RePassword, "", new { @class = "text-danger" })
                       </div>
                   </div>
                   <div class="form-group">

                       <div class="col-sm-10 col-sm-offset-2">
                           <button type="submit" class="btn btn-primary"><i class="fas fa-users"></i> Kayıt Ol</button>
                       </div>
                   </div>



               }

           </div>
       </div> 
        


    </div>
</div>

